<mvc:View controllerName="yelcho.demo.view.Master" displayBlock="true" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
	<Page id="master1Page" title="{i18n>master1Title}">
		<subHeader>
			<Bar id="master1SearchBar">
				<contentMiddle>
					<SearchField id="master1SearchField" placeholder="{i18n>master1SearchPlaceholder}" search="onSearch" showRefreshButton="{device>/isNoTouch}"
						tooltip="{i18n>master1SearchTooltip}" width="100%"></SearchField>
				</contentMiddle>
			</Bar>
		</subHeader>
		<content>
			<List growing="true" growingScrollToLoad="true" id="master1List" items="{/Regions}" mode="{device>/listMode}"
				noDataText="{i18n>masterListNoDataText}" select="onSelect">
				<items>
					<ObjectListItem id="master1ListItem" press="onSelect" title="{RegionDescription}" type="{device>/listItemType}">
						<attributes>
							<ObjectAttribute text="{RegionID}"/>
							<ObjectAttribute text="{RegionDescription}"/>
						</attributes>
					</ObjectListItem>
				</items>
			</List>
		</content>
		<footer>
			<Toolbar></Toolbar>
		</footer>
	</Page>
</mvc:View>