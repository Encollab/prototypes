<mvc:View
		controllerName="encollab.dp.useradmin.controller.Master"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:core="sap.ui.core"
		xmlns="sap.m"
		xmlns:semantic="sap.m.semantic">

	<semantic:MasterPage
			id="page"
			title="{masterView>/title}"
			navButtonPress="onNavBack"
			showNavButton="true">
		<semantic:subHeader>
			<Bar id="headerBar">
				<contentMiddle>
					<SearchField
							id="searchField"
							showRefreshButton="{= !${device>/support/touch} }"
							tooltip="{i18n>vehicleMasterSearchTooltip}"
							width="100%"
							search="onSearch">
					</SearchField>
				</contentMiddle>
			</Bar>
		</semantic:subHeader>

		<semantic:content>
			<PullToRefresh
					id="pullToRefresh"
					visible="{device>/support/touch}"
					refresh="onRefresh" />
			<List
					id="list"
					items="{
						path: '/Vehicles',
						sorter: {
							path: 'VIN',
							descending: false
							}
					}"
					busyIndicatorDelay="0"
					noDataText="{masterView>/noDataText}"
					mode="{= ${device>/system/phone} ? 'None' : 'SingleSelectMaster'}"
					growing="true"
					growingScrollToLoad="true"
					updateFinished="onUpdateFinished"
					selectionChange="onSelectionChange">
				<items>
					<ObjectListItem
							type="{= ${device>/system/phone} ? 'Active' : 'Inactive'}"
							press="onSelectionChange"
							title="{VIN}">
				<firstStatus>
					<ObjectStatus
						text="{PrimaryStatus}"
						state="Success" />
				</firstStatus>
				<attributes>
					<ObjectAttribute text="{VehicleNo/#@sap:label}: {VehicleNo}" />
					<ObjectAttribute text="{Registration/#@sap:label}: {Registration}" />
				</attributes>
					</ObjectListItem>
				</items>
			</List>
		</semantic:content>

	</semantic:MasterPage>

</mvc:View>
