<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog title="{i18n>deleteItemDialogTitle}" contentWidth="30rem" afterClose="onAfterDeleteDialogClose">
        <content>
            <Text text="{i18n>deleteItemDialogConfirmMsg}" class="sapUiSmallMarginBottom" />
        </content>
        <buttons>
            <Button text="{i18n>confirm}" type="Transparent" press="onDeleteDialogConfirm"></Button>
            <Button text="{i18n>cancel}" type="Transparent" press="onDialogCancel"></Button>
        </buttons>
    </Dialog>
</core:FragmentDefinition>